<h1> 

<%if params[:operation] == 'add'%>
<%=params[:number1].to_i + params[:number2].to_i%>
<%end%>
<%if params[:operation] == 'subtract'%>
<%=params[:number1].to_i - params[:number2].to_i%>
<%end%>
<%if params[:operation] == 'multiply'%>
<%=params[:number1].to_i * params[:number2].to_i%>
<%end%>
<%if params[:operation] == 'divide'%>
<%=params[:number1].to_i / params[:number2].to_i%>
<%end%>


</h1>